<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:kocsi"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:kocsi.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="kocsi.Views.MainView"
             x:DataType="vm:MainViewModel">

	<Grid ColumnDefinitions="*, 2*" Margin="20">
		
		<!-- BAL OLDAL: BEVITELI MEZŐK -->
		<StackPanel Grid.Column="0" Spacing="10" Margin="0,0,20,0">
			<TextBlock Text="Új Autó Felvétele" FontSize="18" FontWeight="Bold"/>

			<TextBlock Text="Márka:" />
			<TextBox Text="{Binding BrandInput}" Watermark="Pl. Toyota"/>

			<TextBlock Text="Típus:" />
			<TextBox Text="{Binding ModelInput}" Watermark="Pl. Corolla"/>

			<TextBlock Text="Évjárat:" />
			<NumericUpDown Value="{Binding YearInput}" Minimum="1900" Maximum="2100" FormatString="0"/>

			<TextBlock Text="Rendszám:" />
			<TextBox Text="{Binding LicensePlateInput}" Watermark="Pl. AAA-123"/>

			<Button Content="Hozzáadás" 
                    Command="{Binding AddCarCommand}" 
                    HorizontalAlignment="Stretch" 
                    Margin="0,20,0,0"/>

			<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0" HorizontalAlignment="Center">
				<Button Content="Mentés" Command="{Binding SaveCommand}"/>
				<Button Content="Betöltés" Command="{Binding LoadCommand}"/>
			</StackPanel>
		</StackPanel>

		<!-- JOBB OLDAL: LISTA -->
		<Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
			<ScrollViewer>
				<ItemsControl ItemsSource="{Binding Cars}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<!-- Itt hívjuk meg a különálló CarCard komponenst -->
							<local:CarCard Margin="0,0,0,10"/>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Border>
	</Grid>
</UserControl>
